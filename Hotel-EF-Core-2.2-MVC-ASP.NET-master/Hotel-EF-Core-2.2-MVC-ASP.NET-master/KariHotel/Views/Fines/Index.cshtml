@model IEnumerable<KariHotel.Models.Fines>

@{
    ViewData["Title"] = "Index";
}

<h1>Штрафи</h1>

<p>
    <a asp-action="Create">Створити новий</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FinesID">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.FinesID">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.FinesID">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
