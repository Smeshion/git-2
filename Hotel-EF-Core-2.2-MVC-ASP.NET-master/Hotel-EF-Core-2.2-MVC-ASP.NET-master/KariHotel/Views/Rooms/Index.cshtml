@model IEnumerable<KariHotel.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Кімнатки</h1>

<p>
    <a asp-action="Create">Створити нову</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomID">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.RoomID">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomID">Видалення</a>
            </td>
        </tr>
}
    </tbody>
</table>
